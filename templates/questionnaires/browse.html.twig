{% extends "base.html.twig" %}
  {% block body %}
      <h2>{{ title}}</h2>
     <!-- Content Row -->     
    <div class="row">
    {% for questionnaire in questionnaires %}
      <div class="col-md-4 mb-5">
        <div class="card h-100">
          <div class="card-body">
            <h2 class="card-title">{{ questionnaire.name }}</h2>
            <p class="card-text">{{ questionnaire.description }}</p>
          </div>
          <div class="card-footer">
            <a href="{{ path('attenders_start', {'id': questionnaire.id}) }}" class="btn btn-primary btn-sm">start</a>
            active on {{questionnaire.publishDate|date('Y-m-d')}}
          </div>
        </div>
      </div>
      {% else %}
        <div class='col-12'>No active questionnaires have been found.</div>
    {% endfor %}  

    </div>
    <!-- /.row -->
  {% endblock %}

 