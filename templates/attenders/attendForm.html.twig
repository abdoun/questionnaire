<form action="" name="start_form" id="start_form" onsubmit="$('#span_update').attr('class', 'fa fa-refresh fa-spin fa-1x fa-fw');$.post('{{ path('attenders_next', {'id': steps[0].id}) }}', $( '#start_form' ).serialize(),function(data){$('#step_content').html(data);$('#span_update').attr('class', 'fa fa-arrow-right');} );return false;">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Email" required />
        </div>
        <div class="form-group col-md-6">
            <label for="nname">Name:</label>
            <input type="text" class="form-control" id="nname" name="nname" placeholder="Name" required />
        </div>
        </div>              
        {% if msg !='' %}
        <div class="alert alert-danger"  role="alert">{{ msg }} 
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {% endif %}
        <hr />
        <div class="form-row">
        <div class="form-group col-md-3">
            <button type="submit" class="btn btn-primary">
            Next step <span id="span_update" class="fa fa-arrow-right" aria-hidden="true"></span>
            </button>
        </div>
    </div>
</form>