{% if app.session.get('username')!=null %}
<form method="post" name="add_step" id="add_step" action="">
<input type="hidden" name="id" value="{{ step.id }}" />
<input type="hidden" name="questionnaireId" value="{{ questionnaireId }}" />
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Name" required value="{{step.name}}" />
    </div>
    <div class="form-group col-md-3">
      <label for="active">Active</label>
      <input type="checkbox" class="form-control" id="active" name="active" placeholder="active" {{step.active ? 'checked' : ''}}>
    </div>
    <div class="form-group col-md-3">
      <label for="active">Order</label>
      <input type="number" class="form-control" id="sort" name="sort" placeholder="sort" value="{{step.sort}}" min="1" max="100">
    </div>
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <input type="text" class="form-control" id="description" name="description" placeholder="description" value="{{ step.description }}" />
  </div>
  <div class="form-row">
    <div class="form-group col-md-2">
        <button type="button" class="btn btn-primary" onclick="$(this).children().attr('class', 'fa fa-refresh fa-spin fa-1x fa-fw');$.post('{{ path('steps_update') }}', $( '#add_step' ).serialize(),function(data){$('#content_edit_modal_').html(data);$('#span_update').attr('class', 'fa fa-floppy-o');} );">
        Save <span id="span_update" class="fa fa-floppy-o" aria-hidden="true"></span>
        </button>
    </div>
    <div class="form-group col-md-10">
    {% if msg !='' %}
        <div class="alert alert-{{ msg_class }}"  role="alert">{{ msg }} 
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}
    </div>
  </div>
</form>
{% endif %}